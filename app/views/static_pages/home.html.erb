<% if logged_in? %>
  <%= render 'static_pages/logged_in_home' %>
<% else %>
  <%= render 'static_pages/logged_out_home' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <section class="recommended-movie">
  	  <%= render @movie %>
  	</section>
  </div>
  <aside class="col-md-4">
  	<%= link_to "NEXT MOVIE", root_path, class: "btn btn-primary", id: "button_next_movie" %>
  	<section class="filters">
  	  <%= render 'layouts/filters' %>
  	</section>
  </aside>
</div>