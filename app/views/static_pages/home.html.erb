<% @movie = random_movie %>

<% if logged_in? %>
  <%= render 'static_pages/logged_in_home' %>
<% else %>
  <%= render 'static_pages/logged_out_home' %>
<% end %>

<div class="row">
  <div class="col-md-8">
  	<%= render @movie %>
  	<%= link_to "NEXT MOVIE", root_path, class: "btn btn-primary" %>
  </div>
  <aside class="col-md-4">
  	<section class="filters">
  	  <%= render 'layouts/filters' %>
  	</section>
  </aside>
</div>